@model Game

@{
    ViewData["Title"] = "Pig";
}

<div class="row">
    <div class="col-7">
        <ul class="list-group">
            <li class="list-group-item">
                <div class="row">
                    <div class="col">
                        <label class="mr-1">@Model.Player1.Name</label>
                        <label>@Model.Player1.Score</label>
                    </div>
                    <div class="col">
                        <form asp-action="NewGame" method="post">
                            <input type="submit" value="New Game" class="btn btn-outline-dark float-right" />
                        </form>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <label class="mr-1">@Model.Player2.Name</label>
                        <label>@Model.Player2.Score</label>
                    </div>
                    <div class="col"></div>
                </div>
            </li>
            <li class="list-group-item">
                <div class="row">
                    <div class="col mb-3">
                        <label><strong>@Model.CurrentPlayerName s turn</strong></label>
                    </div>
                </div>

                <div class="row">
                    <div class="col form-inline">
                        <form asp-action="Roll" method="post">
                            <button type="submit" class="btn btn-dark mr-2">Roll</button>
                        </form>

                        <form asp-action="Hold" method="post">
                            <button type="submit" class="btn btn-dark mr-2">Hold</button>
                        </form>

                        <label class="mr-1">Die:</label>
                        <label class="mr-2">@Model.LastRoll</label>

                        <label class="mr-1">Total:</label>
                        <label>@Model.CurrentTurnScore</label>
                    </div>
                </div>
            </li>
        </ul>
    </div>

    <div class="col">
        <ul class="list-group">
            <li class="list-group-item">
                First player to @Game.WinningNumber wins.
            </li>
             <li class="list-group-item">
                Players take turns rolling the die.
            </li>
            <li class="list-group-item">
                Turn ends when player rolls a 1 or chooses to hold.
            </li>
            <li class="list-group-item">
                If player rolls a 1, they lose all points earned during that turn.
            </li>
             <li class="list-group-item">
                If player hold, points earned during that turn are added to their total.               
            </li>
        </ul>
    </div>

</div>

